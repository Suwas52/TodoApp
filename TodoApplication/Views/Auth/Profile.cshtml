@{

    ViewBag.Title = "Profile";
}
@{

    ViewBag.Title = "Change Password";
}
<div class="container py-5">
    <h2 class="fw-bold mb-4">Profile</h2>
    <div class="card p-4">
               <div class="profile-header"></div>

                <div class="d-flex justify-content-between align-items-start px-3">
                    <div class="d-flex align-items-center gap-3">
                        <img src="https://i.pravatar.cc/100?img=5" class="avatar">
                        <div>
                            <h6 class="mb-0 fw-bold">Alexa Rawles</h6>
                            <small class="text-muted">alexarawles@gmail.com</small>
                        </div>
                    </div>
                    <button class="btn btn-primary">Edit</button>
                </div>

                <!-- Form -->
                <div class="row mt-4 g-4">
                    <div class="col-md-6">
                        <label class="form-label">First Name</label>
                        <input type="text" class="form-control" placeholder="Your First Name">
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Last Name</label>
                        <input type="text" class="form-control" placeholder="Your First Name">
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Gender</label>
                        <select class="form-select">
                            <option>Your Gender</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Country</label>
                        <select class="form-select">
                            <option>Your Country</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Language</label>
                        <select class="form-select">
                            <option>Your Language</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Time Zone</label>
                        <select class="form-select">
                            <option>Your Time Zone</option>
                        </select>
                    </div>
                </div>

                <!-- Email Section -->
                <div class="mt-4">
                    <h6 class="fw-bold">My email Address</h6>

                    <div class="email-box d-flex justify-content-between align-items-center mt-2">
                        <div class="d-flex align-items-center gap-2">
                            <i class="bi bi-envelope-fill text-primary"></i>
                            <div>
                                <div class="fw-semibold">alexarawles@gmail.com</div>
                                <small class="text-muted">1 month ago</small>
                            </div>
                        </div>
                    </div>

                    
                </div>

            </div>    
</div>

         