@model TodoApplication.Dto.User.ChangePasswordDto;
@{

    ViewBag.Title = "Change Password";
}
<div class="container py-5">
    <h2 class="fw-bold mb-4">Change Password</h2>

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-4 p-md-5">

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                
                <input type="hidden" asp-for="user_id" />
                <div class="mb-4">
                    <label class="form-label fw-semibold">
                        Old Password

                    </label>

                    <div class="input-group">
                        <input asp-for="old_password" id="old_password" type="text" class="form-control " placeholder="Enter your old password"/>
                    </div>
                </div>

                <!-- New Password -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">New Password</label>

                    <div class="input-group">
                        <input asp-for="new_password" id="new_password" type="text"
                               class="form-control "
                               placeholder="Enter your new password"/>
                    </div>

                </div>

                <div class="mb-5">
                    <label class="form-label fw-semibold">Confirm New Password</label>

                    <div class="input-group">
                        <input asp-for="confirm_password" id="confirm_password" type="text" class="form-control"
                               placeholder="Enter your confirm new password"/>

                    </div>
                </div>

                <!-- Submit -->
                <button type="submit" class="btn btn-primary w-100 py-3 rounded-3 fw-semibold">
                    Change Password
                </button>
            </form>
            

        </div>
    </div>
</div>
