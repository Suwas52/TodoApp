@model List<TodoApplication.Entities.Todos>

@{
    ViewData["Title"] = "Todos";
}

<main class="content">
    <div class="container-fluid p-0">
        <div class="my-3 d-flex justify-content-between align-items-center">
            <h4 class="d-inline align-middle">Todo List</h4>
            <a asp-action="Create" class="btn btn-outline-primary">
                <i class="fas fa-plus"></i> Add
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-hover my-0">
                <thead>
                <tr>
                    <th>S.N</th>
                    <th>Title</th>
                    <th>Priority</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                @if (Model.Any())
                {
                    int i = 1;
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@item.title</td>
                            <td>@item.priority</td>
                            <td>@item.status</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.id"
                                   class="btn btn-sm btn-outline-secondary">
                                    <i class="fas fa-pencil"></i> Edit
                                </a>
                                <a  href="@Url.Action("DeleteTodo", new { id = item.id })"  class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                                <a asp-action="Details" asp-route-id="@item.id"
                                   class="btn btn-sm btn-outline-info">
                                    <i class="fas fa-eye"></i> Details
                                </a>
                            </td>
                        </tr>
                        i++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">No Todos Found</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</main>