@model TodoApplication.Dto.CreateTodoDto

@{
    ViewData["Title"] = "Create Todo";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h5>Create Todo</h5>
        </div>

        <div class="card-body">
            <form asp-action="CreateTodo" method="post">
                @Html.AntiForgeryToken()

                <!-- Title -->
                <div class="mb-3">
                    <label class="form-label">Title</label>
                    <input asp-for="title" class="form-control" />
                    <span asp-validation-for="title" class="text-danger"></span>
                </div>

                <!-- Description -->
                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <textarea asp-for="description"
                              class="form-control"
                              rows="4"
                              placeholder="Enter todo description..."></textarea>
                    <span asp-validation-for="description" class="text-danger"></span>
                </div>

                <!-- Priority -->
                <div class="mb-3">
                    <label class="form-label">Priority</label>
                    <select asp-for="priority"
                            class="form-select"
                            asp-items="Html.GetEnumSelectList<TodoApplication.Enum.todo_priority>()">
                        <option value="">-- Select Priority --</option>
                    </select>
                    <span asp-validation-for="priority" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <a asp-action="TodoList" class="btn btn-secondary me-2">Cancel</a>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
