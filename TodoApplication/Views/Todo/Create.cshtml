@model TodoApplication.Dto.CreateTodoDto

@{
    ViewData["Title"] = "New Task";
}

<style>
    .bg-gradient-create { 
        background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%); 
    }

    .form-card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.05);
    }

    .header-section {
        padding: 30px;
        border-radius: 20px 20px 0 0;
        color: white;
    }

    .form-label-custom {
        font-size: 0.8rem;
        font-weight: 700;
        text-transform: uppercase;
        color: #64748b;
        margin-bottom: 8px;
        display: block;
        letter-spacing: 0.5px;
    }

    .form-control-custom {
        border: 2px solid #f1f5f9;
        border-radius: 12px;
        padding: 12px 16px;
        transition: all 0.2s ease;
        background-color: #f8fafc;
    }

    .form-control-custom:focus {
        border-color: #4f46e5;
        background-color: #fff;
        box-shadow: 0 0 0 4px rgba(79, 70, 229, 0.1);
        outline: none;
    }

    .input-group-text-custom {
        background: none;
        border: 2px solid #f1f5f9;
        border-right: none;
        border-radius: 12px 0 0 12px;
        color: #64748b;
    }

    .btn-save {
        background: #4f46e5;
        border: none;
        padding: 12px 30px;
        border-radius: 12px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-save:hover {
        background: #4338ca;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(79, 70, 229, 0.4);
    }
</style>

<div class="container py-5">
    <div class="mb-4 d-flex align-items-center">
        <a asp-action="TodoList" class="text-decoration-none text-muted fw-bold small">
            <i class="bi bi-chevron-left"></i> BACK TO LIST
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card form-card">
                <div class="header-section bg-gradient-create d-flex align-items-center justify-content-between">
                    <div>
                        <h3 class="fw-bold mb-1 text-white">Create New Task</h3>
                        <p class="mb-0 opacity-75 small">Organize your day by adding a new todo item.</p>
                    </div>
                    <i class="bi bi-pencil-square fs-1 opacity-25"></i>
                </div>

                <div class="card-body p-4 p-md-5">
                    <form asp-action="CreateTodo" method="post">
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-12 mb-4">
                                <label class="form-label-custom" asp-for="title">Task Title</label>
                                <div class="input-group">
                                    <span class="input-group-text input-group-text-custom"><i class="bi bi-type"></i></span>
                                    <input asp-for="title" class="form-control form-control-custom" placeholder="What needs to be done?" style="border-left: none;" />
                                </div>
                                <span asp-validation-for="title" class="text-danger small"></span>
                            </div>

                            <div class="col-md-12 mb-4">
                                <label class="form-label-custom" asp-for="priority">Priority Level</label>
                                <div class="input-group">
                                    <span class="input-group-text input-group-text-custom"><i class="bi bi-flag"></i></span>
                                    <select asp-for="priority"
                                            class="form-select form-control-custom"
                                            style="border-left: none;"
                                            asp-items="Html.GetEnumSelectList<TodoApplication.Enum.todo_priority>()">
                                        <option value="">-- Choose importance --</option>
                                    </select>
                                </div>
                                <span asp-validation-for="priority" class="text-danger small"></span>
                            </div>

                            <div class="col-12 mb-4">
                                <label class="form-label-custom" asp-for="description">Detailed Description</label>
                                <textarea asp-for="description"
                                          class="form-control form-control-custom"
                                          rows="5"
                                          placeholder="Add some notes about this task..."></textarea>
                                <span asp-validation-for="description" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end align-items-center gap-3 mt-2">
                            <a asp-action="TodoList" class="text-decoration-none text-muted fw-bold small">Cancel</a>
                            <button type="submit" class="btn btn-save text-white shadow-sm">
                                <i class="bi bi-plus-lg me-2"></i> Create Task
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}