@model TodoApplication.Dto.AdminUpdateUserDto;

@{
    ViewData["Title"] = "Create User";
}

<main class="content">
    <div class="d-flex justify-content-end">
        <a asp-action="UserList"  class="btn btn-outline-danger">
            ‚Üê Back to List
        </a>
    </div>
    <div class="col-sm-12 col-md-10 col-lg-8 col-xl-8 mx-auto d-table h-100">
        <div class="d-table-cell align-middle">
            
            <div class="text-center mt-3">
                <h1 class="h2">Edit User</h1>
            </div>

            <div class="card shadow">
                <div class="card-body">
                    <div class="m-sm-3">
                        <form asp-action="UpdateUser" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                            <div class="form-floating py-2">
                                <input asp-for="first_name" class="form-control" />
                                <label asp-for="first_name" class="ms-2">First Name</label>
                                <span asp-validation-for="first_name"></span>
                            </div>
                            
                            <div class="form-floating py-2">
                                <input asp-for="last_name" class="form-control" />
                                <label asp-for="last_name" class="ms-2">Last Name</label>
                                <span asp-validation-for="last_name"></span>
                            </div>

                            <div class="form-floating py-2">
                                <input asp-for="email" class="form-control" />
                                <label asp-for="email" class="ms-2">Email</label>
                                <span asp-validation-for="email"></span>
                            </div>
                            
                            
                            <div class="py-2">
                                <label class="form-label fw-bold">Assign Roles</label>

                                <div class="form-check">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           name="roles"
                                           value="SuperAdmin"
                                           id="SuperAdmin" />

                                    <label class="form-check-label" for="SuperAdmin">
                                        SuperAdmin
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           name="roles"
                                           value="Manager"
                                           id="Manager" />

                                    <label class="form-check-label" for="Manager">
                                        Manager
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           name="roles"
                                           value="User"
                                           id="User" />

                                    <label class="form-check-label" for="User">
                                        User
                                    </label>
                                </div>

                                <span asp-validation-for="roles" class="text-danger"></span>
                            </div>
                            <div class="d-grid gap-2 mt-3">
                                <button id="register-submit" type="submit" class="btn btn-lg btn-primary">Create</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}