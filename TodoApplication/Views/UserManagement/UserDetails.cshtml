@model TodoApplication.Dto.UserDetailDto;

@{
    ViewData["Title"] = "Management: " + Model.first_name;
}

<style>
    /* Status Badge Styling */
    .status-indicator {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        display: inline-block;
        margin-right: 5px;
    }

    .info-label {
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        color: #6c757d;
        letter-spacing: 0.5px;
        margin-bottom: 4px;
        display: block;
    }

    .info-value {
        font-size: 1rem;
        font-weight: 500;
        color: #212529;
    }

    .card-custom {
        border: none;
        border-radius: 16px;
        overflow: hidden;
    }

    .profile-header-bg {
        background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
        padding: 40px 30px;
    }

    .avatar-placeholder {
        width: 90px;
        height: 90px;
        background: #f8fafc;
        color: #334155;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        font-weight: bold;
        border-radius: 20px;
        border: 4px solid rgba(255,255,255,0.2);
    }
</style>

<div class="container py-5">
    <div class="mb-4">
        <a asp-action="UserList" class="text-decoration-none text-muted small fw-bold">
            <i class="bi bi-arrow-left me-1"></i> BACK TO USER LIST
        </a>
    </div>

    <div class="card card-custom shadow-sm">
        <div class="profile-header-bg text-white">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-4">
                <div class="d-flex align-items-center gap-3">
                    <div class="avatar-placeholder">
                        @Model.first_name.Substring(0, 1)@Model.last_name.Substring(0, 1)
                    </div>
                    <div>
                        <h3 class="fw-bold mb-1">@Model.first_name @Model.last_name</h3>
                        <p class="mb-0 opacity-75"><i class="bi bi-envelope me-2"></i>@Model.email</p>
                    </div>
                </div>

                @if (User.IsInRole("SuperAdmin"))
                {
                    <div class="d-flex gap-2">
                        <form asp-action="ActiveInactiveUser" asp-route-id="@Model.user_id" asp-controller="UserManagement" method="post">
                            @if (Model.is_active)
                            {
                                <button type="submit" class="btn btn-warning btn-sm px-3 rounded-pill fw-bold">
                                    <i class="bi bi-power me-1"></i> Deactivate
                                </button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-success btn-sm px-3 rounded-pill fw-bold">
                                    <i class="bi bi-check-circle me-1"></i> Activate User
                                </button>
                            }
                        </form>

                        <form asp-action="BlockUnblockUser" asp-route-id="@Model.user_id" asp-controller="UserManagement" method="post">
                            @if (Model.is_blocked)
                            {
                                <button type="submit" class="btn btn-outline-light btn-sm px-3 rounded-pill fw-bold">
                                    <i class="bi bi-unlock me-1"></i> Unblock
                                </button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-danger btn-sm px-3 rounded-pill fw-bold">
                                    <i class="bi bi-slash-circle me-1"></i> Block User
                                </button>
                            }
                        </form>
                    </div>
                }
            </div>
        </div>

        <div class="card-body p-4 p-md-5">
            <div class="row g-4">
                <div class="col-12 mb-2">
                    <h6 class="fw-bold text-dark border-bottom pb-2">Account Status</h6>
                </div>

                <div class="col-6 col-md-4">
                    <span class="info-label">Current Status</span>
                    <div class="d-flex align-items-center">
                        <span class="status-indicator @(Model.is_active ? "bg-success" : "bg-danger")"></span>
                        <span class="fw-bold @(Model.is_active ? "text-success" : "text-danger")">
                            @(Model.is_active ? "ACTIVE" : "INACTIVE")
                        </span>
                    </div>
                </div>

                <div class="col-6 col-md-4">
                    <span class="info-label">Access Policy</span>
                    <div class="d-flex align-items-center">
                        <i class="bi @(Model.is_blocked ? "bi-lock-fill text-danger" : "bi-unlock-fill text-success") me-2"></i>
                        <span class="fw-bold @(Model.is_blocked ? "text-danger" : "text-success")">
                            @(Model.is_blocked ? "BLOCKED" : "AUTHORIZED")
                        </span>
                    </div>
                </div>

                <div class="col-6 col-md-4">
                    <span class="info-label">Email Verification</span>
                    <div class="d-flex align-items-center">
                        <i class="bi @(Model.email_confirmed ? "bi-patch-check-fill text-primary" : "bi-patch-exclamation text-warning") me-2"></i>
                        <span class="fw-bold @(Model.email_confirmed ? "text-primary" : "text-warning")">
                            @(Model.email_confirmed ? "VERIFIED" : "PENDING")
                        </span>
                    </div>
                </div>

                <div class="col-12 mt-5">
                    <h6 class="fw-bold text-dark border-bottom pb-2">Assigned Permissions</h6>
                    <div class="d-flex flex-wrap gap-2 mt-3">
                        @foreach (var role in Model.roles)
                        {
                            <span class="badge bg-light text-primary border border-primary px-3 py-2 rounded-pill">
                                <i class="bi bi-shield-check me-1"></i> @role.role_Name
                            </span>
                        }
                    </div>
                </div>

                <div class="col-12 mt-5">
                    <h6 class="fw-bold text-dark border-bottom pb-2">System History</h6>
                </div>

                <div class="col-md-6 col-lg-3">
                    <span class="info-label">Member Since</span>
                    <div class="info-value text-muted">@Model.created_at.ToString("MMM dd, yyyy")</div>
                </div>

                <div class="col-md-6 col-lg-3">
                    <span class="info-label">Last Activity</span>
                    <div class="info-value text-muted">
                        @(Model.last_login_date?.ToString("MMM dd, yyyy HH:mm") ?? "Never")
                    </div>
                </div>

                <div class="col-md-6 col-lg-3">
                    <span class="info-label">Login Fails</span>
                    <div class="info-value @(Model.login_fail_count > 0 ? "text-danger" : "text-muted")">
                        @Model.login_fail_count Attempts
                    </div>
                </div>

                <div class="col-md-6 col-lg-3">
                    <span class="info-label">Last Updated</span>
                    <div class="info-value text-muted">
                        @(Model.updated_at?.ToString("MMM dd, yyyy") ?? "No updates")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>