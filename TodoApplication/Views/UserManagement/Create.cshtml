@model TodoApplication.Dto.AdminAddUserDto;

@{
    ViewData["Title"] = "Register User";
}

<style>
    /* Admin Midnight Gradient */
    .bg-gradient-admin { 
        background: linear-gradient(135deg, #0f172a 0%, #334155 100%); 
    }

    .form-card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.08);
    }

    .header-section {
        padding: 40px 30px;
        border-radius: 20px 20px 0 0;
        color: white;
    }

    .form-label-custom {
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        color: #64748b;
        margin-bottom: 8px;
        display: block;
        letter-spacing: 0.5px;
    }

    .form-control-custom {
        border: 2px solid #f1f5f9;
        border-radius: 12px;
        padding: 12px 16px;
        transition: all 0.2s ease;
        background-color: #f8fafc;
        height: auto; /* Reset floating label height */
    }

    .form-control-custom:focus {
        border-color: #334155;
        background-color: #fff;
        box-shadow: 0 0 0 4px rgba(51, 65, 85, 0.1);
        outline: none;
    }

    /* Role Box Styling */
    .role-selection-box {
        background-color: #f8fafc;
        border: 2px solid #f1f5f9;
        border-radius: 12px;
        padding: 15px;
    }

    .btn-create {
        background: #0f172a;
        border: none;
        padding: 14px;
        border-radius: 12px;
        font-weight: 600;
        color: white;
        transition: all 0.3s ease;
    }

    .btn-create:hover {
        background: #1e293b;
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(15, 23, 42, 0.3);
    }
</style>

<div class="container py-5">
    <div class="mb-4">
        <a asp-action="UserList" class="text-decoration-none text-muted fw-bold small">
            <i class="bi bi-arrow-left me-1"></i> BACK TO USER LIST
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-9">
            <div class="card form-card">
                <div class="header-section bg-gradient-admin">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="fw-bold mb-1">Create New User</h3>
                            <p class="mb-0 opacity-75 small">Onboard a new team member and assign their permissions.</p>
                        </div>
                        <i class="bi bi-person-plus fs-1 opacity-25"></i>
                    </div>
                </div>

                <div class="card-body p-4 p-md-5">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 border-0 shadow-sm mb-4" role="alert"></div>
                        }

                        <div class="row g-4">
                            <div class="col-md-6">
                                <label class="form-label-custom" asp-for="first_name">First Name</label>
                                <div class="form-floating">
                                    <input asp-for="first_name" class="form-control form-control-custom" placeholder="John" />
                                    <label asp-for="first_name" class="text-muted small">Enter first name</label>
                                </div>
                                <span asp-validation-for="first_name" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label-custom" asp-for="last_name">Last Name</label>
                                <div class="form-floating">
                                    <input asp-for="last_name" class="form-control form-control-custom" placeholder="Doe" />
                                    <label asp-for="last_name" class="text-muted small">Enter last name</label>
                                </div>
                                <span asp-validation-for="last_name" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label class="form-label-custom" asp-for="email">Email Address</label>
                                <div class="form-floating">
                                    <input asp-for="email" class="form-control form-control-custom" placeholder="name@example.com" />
                                    <label asp-for="email" class="text-muted small">Email used for login</label>
                                </div>
                                <span asp-validation-for="email" class="text-danger small"></span>
                            </div>

                            <div class="col-12 mt-4">
                                <label class="form-label-custom">Assign Permissions (Roles)</label>
                                <div class="role-selection-box">
                                    <div class="d-flex flex-wrap gap-4">
                                        <div class="form-check custom-check">
                                            <input class="form-check-input" type="checkbox" name="roles" value="SuperAdmin" id="SuperAdmin" />
                                            <label class="form-check-label fw-medium" for="SuperAdmin">SuperAdmin</label>
                                        </div>
                                        <div class="form-check custom-check">
                                            <input class="form-check-input" type="checkbox" name="roles" value="Manager" id="Manager" />
                                            <label class="form-check-label fw-medium" for="Manager">Manager</label>
                                        </div>
                                        <div class="form-check custom-check">
                                            <input class="form-check-input" type="checkbox" name="roles" value="User" id="User" />
                                            <label class="form-check-label fw-medium" for="User">User</label>
                                        </div>
                                    </div>
                                    <span asp-validation-for="roles" class="text-danger small mt-2 d-block"></span>
                                </div>
                                <p class="text-muted small mt-2 mb-0">
                                    <i class="bi bi-info-circle me-1"></i> You can assign multiple roles to a single user.
                                </p>
                            </div>

                            <div class="col-12 mt-5">
                                <button type="submit" class="btn btn-create w-100 shadow-sm">
                                    <i class="bi bi-person-check me-2"></i> Create New User
                                </button>
                                <div class="text-center mt-3">
                                    <a asp-action="UserList" class="text-muted small text-decoration-none">Discard and go back</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}